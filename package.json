{
  "name": "nestjs-cryptography",
  "version": "3.2.3",
  "author": {
    "name": "Marc Jorge Gonzalez",
    "url": "https://github.com/cipher-fox"
  },
  "license": "MIT",
  "description": "Secure NestJS cryptography module üîê",
  "homepage": "https://nestjs-cryptography.cypher-fox.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cipher-fox/nestjs-cryptography.git"
  },
  "bugs": {
    "url": "https://github.com/cipher-fox/nestjs-cryptography/issues"
  },
  "scripts": {
    "build": "rimraf -rf dist && tsc -p tsconfig.json",
    "format": "prettier --write \"lib/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint --fix",
    "publish:npm": "npm publish --access=public",
    "prepublish": "yarn run build",
    "prepack": "yarn run build",
    "test": "jest",
    "test:cov": "jest --coverage",
    "all": "yarn format && yarn lint && yarn test && yarn prepack"
  },
  "dependencies": {
    "argon2": "^0.44.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.36.0",
    "@nestjs/cli": "^11.0.10",
    "@nestjs/common": "^11.1.6",
    "@nestjs/core": "^11.1.6",
    "@nestjs/platform-express": "^11.1.6",
    "@nestjs/schematics": "^11.0.7",
    "@nestjs/testing": "^11.1.6",
    "@types/express": "^5.0.3",
    "@types/jest": "30.0.0",
    "@types/node": "24.5.2",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "30.1.3",
    "prettier": "^3.6.2",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^6.0.1",
    "rxjs": "^7.8.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.0"
  },
  "peerDependencies": {
    "@nestjs/common": "^9.0.0 || ^10.0.0 || ^11.0.0",
    "@nestjs/core": "^9.0.0 || ^10.0.0 || ^11.0.0"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/wiki/"
    ],
    "modulePathIgnorePatterns": [
      "/wiki/"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "./",
    "testMatch": [
      "**/test/**/?(*.)+(spec|test).[tj]s?(x)"
    ],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.service.ts"
    ],
    "testEnvironment": "node"
  }
}
